generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  password      String
  role          UserRole @default(USER)
  isActive      Boolean  @default(true)
  emailVerified Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  apps          App[]
  auditLogs     AuditLog[]
  billingInfo   BillingInfo?
  usageRecords  UsageRecord[]
  sessions      Session[]

  @@map("users")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  token        String   @unique
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model App {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      AppStatus @default(CREATING)
  template    String
  domain      String?
  config      String
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  deployments Deployment[]
  backups     Backup[]
  snapshots   Snapshot[]
  auditLogs   AuditLog[]
  usageRecords UsageRecord[]

  @@map("apps")
}

model Deployment {
  id        String   @id @default(cuid())
  appId     String
  status    DeploymentStatus @default(PENDING)
  version   String
  logs      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  app       App     @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@map("deployments")
}

model Backup {
  id        String   @id @default(cuid())
  appId     String
  filename  String
  size      Int
  status    BackupStatus @default(CREATING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  app       App     @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@map("backups")
}

model Snapshot {
  id        String   @id @default(cuid())
  appId     String
  name      String
  size      Int
  status    SnapshotStatus @default(CREATING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  app       App     @relation(fields: [appId], references: [id], onDelete: Cascade)

  @@map("snapshots")
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String?
  appId       String?
  action      String
  resource    String
  resourceId  String?
  details     String?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  // Relations
  user        User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  app         App?     @relation(fields: [appId], references: [id], onDelete: SetNull)

  @@map("audit_logs")
}

model BillingInfo {
  id               String   @id @default(cuid())
  userId           String   @unique
  stripeCustomerId String?
  plan             BillingPlan @default(FREE)
  billingCycle     BillingCycle @default(MONTHLY)
  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("billing_info")
}

model UsageRecord {
  id           String   @id @default(cuid())
  userId       String
  appId        String?
  metric       String
  value        Float
  unit         String
  recordedAt   DateTime @default(now())
  createdAt    DateTime @default(now())

  // Relations
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  app          App?     @relation(fields: [appId], references: [id], onDelete: SetNull)

  @@map("usage_records")
}

enum AppStatus {
  CREATING
  RUNNING
  STOPPED
  ERROR
  DELETING
}

enum DeploymentStatus {
  PENDING
  DEPLOYING
  SUCCESS
  FAILED
}

enum BackupStatus {
  CREATING
  COMPLETED
  FAILED
}

enum SnapshotStatus {
  CREATING
  COMPLETED
  FAILED
}

enum UserRole {
  USER
  ADMIN
  SUPER_ADMIN
}

enum BillingPlan {
  FREE
  BASIC
  PRO
  ENTERPRISE
}

enum BillingCycle {
  MONTHLY
  YEARLY
}